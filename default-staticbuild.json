{
  "verbose":  false,
  "data":  "staticbuild.data.json",
  "host":  null,
  "port":  8080,
  "root":  "site",
  "favicon":  "favicon.ico",
  "template": {
    "index":  "index",
    "engine":  "nunjucks",
    "extension": "htm",
    "globals": "staticbuild.htm.js",
    "locals": "*.htm.js",
    "options": {
      "autoescape": true
    }
  },
  "css": {
    "map": {
      "enabled":  true,
      "inline":  false
    }
  },
  "ignore": [
    ".gitignore",
    "*.layout.htm",
    "*.map"
  ]
}
