doctype html
html(lang="en")
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    - var title = (error.status ? '(' + error.status + ') ' : '') + message
    title= title
  body
    h1= title
    pre #{error.stack}
